<title>
  {{ user}}'s profile
</title>

<link rel='stylesheet' href='/public/stylesheets/profile.css' />

<div style=" text-align: center; position: absolute;"  class="container">
  <div class='txt'>
    <h3 style="color: white">{{ user.username }}</h3> | <small style="color: white" >{{ user.email }}</small>
    <h4 style="color: white">{{ user.profile.name }}</h4>
  </div>    
  <h3 style="color: white">Profile Info:</h3>
  <p style="color: white" >Age | {{ user.referralID}}</p>
  <p style="color: white" >Phone Number | {{user.referralNO}}</p>
  <p style="color: white" >Country | {{ user.followers }}</p>
  <p style="color: white" >Coins | {{ user.following }}</p></h5>   
</div>


{% for obj in jn %}
<div style="padding-top:30px;" class="container">
  <div class="card mb-8">
    <div class="card-body">
        <h2 class="card-title">{{ obj.title }}</h2>
        <b>By you</b> | <small>{{ date|timesince }} ago | {{obj.likes}}</p></small>
        <p class="card-text">{{obj.content|slice:":76" }}...</p>  

        <br>  <a href="/read-post/{{ post.id}}" style="
        width: 240px;
        background: white;
        height: 40px;
        color: rgb(0, 0, 0);
        padding: 5px;
        font-size: 17px;
        cursor: pointer;
        margin: 12px 0;" class="btn btn-primary">Read More &rarr;</a>
    </div>
  </div>
</div>

{% endfor %}

<div style="padding-top: 30px; padding-left: 40px">
     <h4> Click <a href="/add-post">here</a> to add new post</h4>
</div>
{% endblock %}